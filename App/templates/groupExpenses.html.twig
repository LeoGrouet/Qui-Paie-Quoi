{% extends "base.html.twig" %}

{% trans_default_domain 'groups' %}

{% block stylesheets %}
  <link rel="stylesheet" href="/css/groupPage.css">
{% endblock %}

{% block body %}
  <div class="group_container">

    <header class="group_container_header">
      <a class="back_arrow" href="{{ path ('groups_home') }}">
        <img src="{{ asset('image/back_arrow.svg') }}" alt="home page">
      </a>
      <h2 class="group_title">{{ groupName }}</h2>
    </header>

    <nav class="group_parameter">
        <a class="group_parameter_expense group_parameter_active" href="{{ path ('groups_expenses', {id:groupId}) }}">{{'expenses'|trans }}</a>
        <a class="group_parameter_balance" href="{{ path ('groups_balance', {id:groupId}) }}">{{'balance'|trans }}</a>
    </nav>

    <section class="group_expense_container">
      {% for expense in expenses %}
      <div class="group_info_expense">
        <div class="group_info_container">
          <p class="group_info_text">{{ expense.description }}</p>
          <p class="group_info_payer">{{'boughtBy'|trans }} {{ expense.payer.username }} </p>
        </div>
          <p class="group_info_amount">{{ formatNumber(expense.amount) }} â‚¬</p>
      </div>
      {% endfor %}
    </section>

  </div> 
{% endblock %}
